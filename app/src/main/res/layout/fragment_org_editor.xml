<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".UI.OrgEditor.OrgEditorFragment"
    android:id="@+id/fragOrgEditor">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvOrgName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/sample"
        android:textSize="35sp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTeamName"
        android:layout_below="@id/tvOrgName"
        android:layout_centerHorizontal="true"
        android:text="@string/sample"
        android:textSize="25sp"
        android:layout_marginTop="25dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:layout_below="@+id/tvTeamName"
        android:layout_above="@+id/btnCreateTeam"
        android:layout_marginVertical="10dp"
        android:layout_alignParentLeft="true"

        tools:listitem="@layout/fragment_member" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAddMember"
        android:layout_above="@+id/btnSave"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:text="Add Member"
        android:textSize="20sp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCreateTeam"
        android:layout_above="@+id/btnSave"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:text="Create Team"
        android:textSize="20sp"
        />

    <!--TODO: add option to delete teams -->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnBack"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:text="Back"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSave"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:text="Save"
        android:textSize="20sp"
        />

</RelativeLayout>