<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvNewOrg"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:text="Create Your Organization"
        android:textSize="30sp"
        />

    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/etName"
        android:layout_below="@id/tvNewOrg"
        android:layout_centerHorizontal="true"
        android:hint="Organization Name"
        android:layout_marginTop="25dp"
        android:textSize="20sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDate1"
        android:layout_below="@id/etName"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:text="First Event Date:"
        android:layout_marginTop="10dp"
        android:textSize="17sp"
        />

    <Spinner
        android:id="@+id/spDay1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDate1"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        />

    <Button
        android:id="@+id/btnPick1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/tvDate1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:text="Pick the Time"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDate2"
        android:layout_below="@id/btnPick1"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:text="Second Event Date (Optional):"
        android:layout_marginTop="10dp"
        android:textSize="17sp"
        />

    <Spinner
        android:id="@+id/spDay2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDate2"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        />

    <Button
        android:id="@+id/btnPick2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/tvDate2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:text="Pick the Time"
        />


</RelativeLayout>